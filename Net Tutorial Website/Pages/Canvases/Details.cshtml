@page "{id:int?}"
@model Net_Tutorial_Website.Pages.Canvases.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Canvas</h4>
    <hr />
    <div class="image-container">
        <img src="/@Url.Content(Model.Canvas.ImagePath)" style='height: 100%; width: 100%; object-fit: contain; max-width: 1600px; max-height: 1000px' />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canvas.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canvas.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canvas.Info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canvas.Info)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canvas.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canvas.Price)
        </dd>
    </dl>
</div>
<div>
    <form>
        <p>
            ID <input type="hidden" asp-for="AddToCart" value="@Model.Canvas.Title" />
            <input type="submit" value="Add">
        </p>
    </form>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Canvas?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
