@page
@model Net_Tutorial_Website.Pages.Carts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to remove this item?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Price)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="/@Url.Content(Model.Cart.ImagePath)" style='height: 100%; width: 100%; object-fit: contain; max-width: 320px; max-height: 200px' />
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Cart.ID" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Cart</a>
    </form>
</div>
